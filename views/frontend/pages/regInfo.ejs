<script>
	var startDate = <%- JSON.stringify(startDate) %>;
	var endDate = <%- JSON.stringify(endDate) %>;
	var start_n = new Date(startDate).getDay();
	var end_n = new Date(endDate).getDay();
	var week_name_arr = "日,一,二,三,四,五,六".split(',');
	var start_week_name = week_name_arr[start_n];
	var end_week_name = week_name_arr[end_n];
	var register_date_str = `${startDate}（${start_week_name}）至 ${endDate}（${end_week_name}）`
	$('.js-register_date').text(register_date_str);
</script>
