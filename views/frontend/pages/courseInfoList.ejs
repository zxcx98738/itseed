<!--HEADER-->
<% include ../header %>
<!--END HEADER-->
<img src="/images/layout/3-1course.png" id="img-responsive" width="100%" class="banner">

<section class="bg-light-gray" id="cousreInfoList">

		<div class="row">
			<% for(var i = 0; i < datas.length; i++){ %>
			<div class="col-md-3 col-sm-6 col-xs-12">
				<div class="course-card">
					<div class="photo text-center">
						<img src="<%= datas[i].photo %>"></img>
					</div>
					<div class="image-overlay"></div>
					<div class="view-details">
						<a href="<%= url + datas[i].id %>">課程介紹</a>
					</div>
					<div class="intro">
						<div class="title">
							<%= datas[i].title %>
						</div>
						<div class="instructor">
							<strong>講師</strong>  <span style="font-size: 16px;"><%= datas[i].speaker %></span>
							<p>
								<%= datas[i].speakerTitle %>
							</p>
						</div>
					</div>
				</div>
			</div>
		<% } %>
		</div>
</section>

<!--FOOTER-->
<% include ../footer %>
<!--END FOOTER-->
